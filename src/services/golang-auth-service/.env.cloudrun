# Cloud Run production environment variables
# Note: Do not put secrets here if the repo is public. These are safe defaults.

PORT=8080
GCP_PROJECT_ID=canary-462412
JWT_SECRET_NAME=jwt_secret

# CORS for production frontend
# Supports default Cloud Run domains and localhost dev
CORS_ALLOW_ORIGINS=*.run.app
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true

# Feature flags / service backends
USE_FIRESTORE=true
FIRESTORE_PROJECTID=canary-462412
FIRESTORE_DATABASEID=default
USE_GSM=true
